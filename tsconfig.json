{
  "compilerOptions": {
    "moduleResolution": "bundler",
    "allowJs": false,
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "declaration": true,
    "declarationDir": "dist",
    "isolatedModules": true,
    "useUnknownInCatchVariables": false,
    "strict": false,
    "types": [],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noEmit": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}